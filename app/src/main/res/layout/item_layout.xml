<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/top_layer_item"
        android:layout_width="match_parent"
        android:background="@color/itemTopBackground"
        android:layout_height="64dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="19.2dp"
            android:layout_marginLeft="32.1dp"
            android:layout_marginStart="32.1dp"
            android:layout_marginTop="16.8dp"
            android:textColor="@color/textColor"
            android:text="Enquiry "
            android:textSize="24sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="19.2dp"
            android:layout_marginEnd="26.1dp"
            android:layout_marginRight="26.1dp"
            android:layout_marginTop="16.8dp"
            android:textColor="@color/textColor"
            android:text="Garage Name"
            android:textSize="24sp" />
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/item_details"
        android:layout_below="@id/top_layer_item"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/item_pic"
            android:layout_width="210.9dp"
            android:layout_height="211.9dp"
            android:background="@drawable/image_background"/>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_part_name"
            android:textColor="@color/textColor"
            android:text="Part Name"
            android:textSize="36sp"
            android:layout_toRightOf="@id/item_pic"
            android:layout_toEndOf="@id/item_pic"
            android:layout_marginLeft="22dp"
            android:layout_marginStart="22dp"/>
    </RelativeLayout>

</RelativeLayout>