<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:background="@color/itemTopBackground"
    android:layout_height="wrap_content">

<EditText
    android:id="@+id/vendor_name"
    android:hint="Vendor Name"
    android:inputType="text"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="22dp"
    android:layout_marginStart="22dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/mrp_rupee_pic"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/indian_rupee_symbol"
        android:layout_width="18dp"
        android:layout_height="24dp" />

    <EditText
        android:id="@+id/mrp_value"
        android:hint="MRP"
        android:inputType="number"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="2dp"
        android:layout_marginStart="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/cp_rupee_pic"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/indian_rupee_symbol"
        android:layout_width="18dp"
        android:layout_height="24dp" />

    <EditText
        android:id="@+id/cp_value"
        android:hint="CP"
        android:inputType="number"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="2dp"
        android:layout_marginStart="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/sp_rupee_pic"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/indian_rupee_symbol"
        android:layout_width="18dp"
        android:layout_height="24dp" />

    <EditText
        android:id="@+id/sp_value"
        android:hint="SP"
        android:inputType="number"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="2dp"
        android:layout_marginStart="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>